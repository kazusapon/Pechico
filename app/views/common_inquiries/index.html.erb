<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h4 class="m-0 text-dark">よくある問合せ一覧</h4>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      
      <div class="card">
        <div class="card-header">
          <%= search_form_for @q do |f| %>
            <div class="row">
              <div class="form-group col-sm-2">
                <%= f.label :system_id_eq, 'システム' %>
                <%= f.select :system_id_eq, @systems, { include_blank: 'すべて' }, { class: 'form-control' } %>
              </div>
              <div class="text-right">
                <%= f.submit '検索', class: 'btn btn-success' %>
                <%= link_to '新規追加', new_common_inquiry_path, method: :get, remote: true, class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="card-body p-0">
          <table class="table table-striped">
            <thead>
              <tr class="bg-secondary">
                <th>No</th>
                <th>システム名</th>
                <th>問合せ</th>
                <th>回答</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @common_inquiries.each_with_index do |common_inquiry, i| %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= common_inquiry.system.short_name %></td>
                  <td><%= common_inquiry.question %></td>
                  <td><%= common_inquiry.answer %></td>
                  <td><%= common_inquiry_operate_button(common_inquiry) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @common_inquiries %>
        </div>
      </div>
    </div>
  </section>
</div>

<div id="modal_area">
</div>
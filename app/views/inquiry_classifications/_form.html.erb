<div id="inquiry_classification_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" area-modal="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">問合せ分類の保存</h4>
      </div>

      <%= form_with model: @inquiry_classification, local: false do |f| %>
        <div id="errors"></div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, '分類名' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <%= button_tag '閉じる', type: 'button', class: 'btn btn-default', data: {:'bs-dismiss' => "modal"} %>
          <%= save_button_tag(f) %>
        </div>
      <% end %>
    </div>
  </div>
</div>

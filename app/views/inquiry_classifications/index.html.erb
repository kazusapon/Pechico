<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h4 class="m-0 text-dark">問合せ分類一覧</h4>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      
      <div class="card">
        <div class="card-header">
          <div class="text-right">
            <%= link_to '新規追加', new_inquiry_classification_path, method: :get, remote: true, class: 'btn btn-primary' %>
          </div>
        </div>

        <div class="card-body p-0">
          <table class="table table-striped">
            <thead>
              <tr class="bg-secondary">
                <th>No</th>
                <th>分類名</th>
                <th>削除日時</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @inquiry_classifications.each_with_index do |classification, i| %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= classification.name %></td>
                  <td><%= classification.deleted_at.try!(:strftime, '%Y-%m-%d %H:%M:%S') %></td>
                  <td><%= inquiry_classification_operate_button(classification) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @inquiry_classifications %>
        </div>
      </div>
    </div>
  </section>
</div>

<div id="modal_area">
</div>
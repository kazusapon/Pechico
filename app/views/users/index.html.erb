<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <h4 class="m-0 text-dark">ユーザ一覧</h4>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      
      <div class="card">
        <div class="card-header">
          <div class="text-right">
            <%= link_to 'ユーザ追加', new_user_path, method: :get, remote: true, class: 'btn btn-primary' %>
          </div>
        </div>

        <div class="card-body p-0">
          <table class="table table-striped">
            <thead>
              <th>No</th>
              <th>ユーザ名</th>
              <th>削除日</th>
              <th></th>
            </thead>

            <tbody>
              <% @users.each_with_index do |user, i| %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= user.name %></td>
                  <td></td>
                  <td>
                    <%= link_to '編集', root_path, class: 'btn btn-secondary' %>
                    <%= link_to '削除', root_path, class: 'btn btn-danger' %>
                  </td>
                </tr>
              <% end %> 
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</div>

<div id="modal_area">
</div>
<div id="system_modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" area-modal="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">
          <%= @modal_title %>
        </h4>
      </div>

      <%= form_with model: @system, local: false do |f| %>
        <div id="errors"></div>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :name, 'システム名' %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :short_name, 'システム名（略称）' %>
            <%= f.text_field :short_name, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <%= button_tag '閉じる', type: 'button', class: 'btn btn-default', id: 'modal_close' %>
          <%= f.submit '保存', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>

  $('#modal_close').on('click', () => {
    $('#system_modal').modal('hide');
  });

</script>
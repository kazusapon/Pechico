<div class="card">
  <%= search_form_for @q, url: dashboard_index_path, class: 'form-horizontal' do |f| %>
    <div class="card-body">
      <div class="row">
        <div class='form-group col col-sm-2'>
          <%= f.label :inquiry_date_gteq, '着信日' %>
          <%= f.search_field :inquiry_date_gteq, class: 'form-control datepickr', placeholder: '開始日' %>
        </div>
        <div class='form-group col col-sm-2'>
          <%= label_tag 'q[inquiry_date_lteq]', '　' %>
          <%= f.search_field :inquiry_date_lteq, class: 'form-control datepickr', placeholder: '終了日' %>
        </div>
      </div>
      <div class="row">
        <div class='form-group col col-sm-8'>
          <%= f.label :user_id_eq_any, 'システム' %><br>
          <% @systems.each_with_index do |sys, i| %>
            <div class="form-check form-check-inline">
              <%= f.check_box :system_id_eq_any, { multiple: true, class: "form-check-input", id: "system_chack_box_#{i}", include_hidden: false }, sys.id, ''  %>
              <label class="form-check-label" for="<%= "system_chack_box_#{i}" %>"><%= sys.name %></label>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class='form-group col col-sm-8'>
          <%= f.label :user_id_eq_any, 'ユーザー' %><br>
          <% @users.each_with_index do |user, i| %>
            <div class="form-check form-check-inline">
              <%= f.check_box :user_id_eq_any, { multiple: true, class: "form-check-input", id: "system_chack_box_#{i}", include_hidden: false }, user.id, ''  %>
              <label class="form-check-label" for="<%= "system_chack_box_#{i}" %>"><%= user.name %></label>
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class='form-group col col-sm-1'>
          <%= f.label :display_format, '表示形式' %><br>
          <%= select_tag :display_format, 
              options_for_select(@display_format), { class: 'form-control' } %>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <div class="text-right">
        <%= f.submit '検索', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>